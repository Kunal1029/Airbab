<% if(success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show col-4 offset-4 mt-3 mb-3 text-center"
  role="alert"
>
  <strong>
    <b class=""><%= success %></b>
  </strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<% if(error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-4 offset-4 mt-3 mb-3 text-center"
  role="alert"
>
  <strong>
    <b class=""><%= error %></b>
  </strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
