<% layout('/layout/boilerplate.ejs') -%>
<div class="container">
  <div class="new-listing">
    <h3 class="text-center mb-4">Please SignUp</h3>

    <form
      action="/signup"
      method="POST"
      noValidate
      class="needs-validation"
    >
      <div class="form-group mb-4">
        <label for="Username" class="form-label" style="color: #df2086"
          >Username</label
        >
        <input
          type="text"
          required
          class="form-control mb-2"
          id="username"
          name="username"
          placeholder="Enter Username"
        />
        <div class="invalid-feedback"><b>Please Enter Username</b></div>
        <div class="valid-feedback"><b>Looks Good</b></div>
      </div>

      <div class="form-group mb-4">
        <label for="Email" class="form-label" style="color: #df2086"
          >Email</label
        >
        <input
          type="email"
          class="form-control mb-2"
          required
          id="Email"
          name="email"
          placeholder="Enter Email"
        ></input>
        <div class="invalid-feedback"><b>Please Enter Email</b></div>
        <div class="valid-feedback"><b>Looks Good</b></div>
      </div>

      <div class="form-group mb-4">
        <label for="password" class="form-label" style="color: #df2086"
          >Password</label
        >
        <input
          type="password"
          class="form-control mb-2"
          required
          id="password"
          name="password"
          placeholder="Enter password"
        ></input>
        <div class="invalid-feedback"><b>Please Enter Password</b></div>
        <div class="valid-feedback"><b>Looks Good</b></div>
      </div>

      <div class="form-group mb-4 text-center">
        <button type="submit" class="btn btn-block create-account">
          SignUp
        </button>
      </div>
    </form>
  </div>
</div>
