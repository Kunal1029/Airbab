<% layout('/layout/boilerplate.ejs') -%>


<div class="container">

  <h3 class="text-center mt-4 mb-4">All Listing</h3>

  <div class="tx mb-4">
    <div class="form-check form-switch">
      <input class="form-check-input" class="" type="checkbox"  role="switch" id="tax-show">
      <label class="form-check-label" for="switchCheckDefault">Show Tax</label>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let Listing of allListings) { %>
    <a href="/api/list/show/<%=Listing._id %>" class="listing-link">
      <div class="card">
        <img
          src="<%= Listing.image.url %>"
          style="height: 20rem"
          class="card-img-top"
          alt="..."
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p><i>Owner: <b><%= Listing.owner.username %></b></i></p>
          <p class="card-text">
            <b><%= Listing.title %></b>
            <br />
            <%= Listing.price %> &nbsp; <i class="showTax">+18% gst </i> 
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>

<script>
  let taxShown = document.getElementById("tax-show")
  

  taxShown.addEventListener("click", ()=>{
    let ts = document.getElementsByClassName("showTax")
    for(info of ts){
      if(info.style.display !== "inline"){
      info.style.display = "inline"
     }else{
      info.style.display = "none"
     }
    }
  })

</script>
